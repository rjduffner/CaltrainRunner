<div class="container-fluid">
    <div class="row-fluid">
        <div class="span12">
            <img class="head" src="/images/monkeyhead.png" width="300" >
            <h1>Caltrain Runner</h1>

        </div>
    </div>
    <div class="row-fluid">
        <div class="span8">
            <div class="module">
                <div class="module-header">
                    <span>Departing Trains:</span>
                </div>
                <div class="module-body table"id="train-data">HELLO WORLD</div>
                <div class="module-footer"> Hello
                </div>
            </div>
        </div>

        <div class="span4">
            <div class="weather module" id="weather">
            </div>
            <div class="">

           <a class="twitter-timeline"  href="https://twitter.com/caltrain" data-widget-id="522884179529187328">Tweets by @caltrain</a>
                       <script>!function(d,s,id){var
                       js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
                                 </div>
        </div>
        
    </div>
</div>

<script type="text/html" id="table-template">
    <table>
        <thead>
            <tr>
                <th>Service</th>
                <th>Direction</th>
                <th>Arrival Time</th>
                <th>Final Stop</th>
            </tr>
        </thead>
        <tbody>
            {{ #departing }}
            <tr>
                <td>{{ serviceType }}</td>
                <td>{{ direction }}</td>
                <td>{{ arrivalTime }}</td>
                <td>{{ tripHeadsign }}</td>
            </tr>
            {{ /departing }}
        </tbody>
    </table>
</script>

<script type="text/html" id="weather-template">
    <div class="span6">
        <h2>
            <i class="icon {{ code }}"></i>
            {{ temp }}&deg {{ units.temp }}
        </h2>
        <ul>
            <li> {{ city }} {{ region }} </li>
            <li> {{currently }} </li>
            <li> {{ wind.direction }} {{ wind.speed }} {{ units.speed }} </li>
        </ul>
    </div>
    <div class="span6">
        <img class="image" src="{{ image }}">
    </div>

</script>
